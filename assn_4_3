def computepay (h, r) :
    if h <= 40 :
        p = r * h
    else :
        p = r * 40 + (r * 1.5 * ( h - 40))
    return p 

try:
    inp = raw_input("Enter Hours:")
    Hours = float(inp)
    inp = raw_input("Enter Rate:")
    Rate = float(inp)
except:
    print "Error, please enter numeric input"
    quit()
    
pay = computepay(Hours, Rate)
print pay
